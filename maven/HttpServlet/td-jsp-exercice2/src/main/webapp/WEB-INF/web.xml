<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Lefoot</servlet-name>
        <servlet-class>controlleur.ControleurLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Lefoot</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Bet</servlet-name>
        <servlet-class>controlleur.ControleurBet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Bet</servlet-name>
        <url-pattern>/Bet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Results</servlet-name>
        <servlet-class>controlleur.ControleurResults</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Results</servlet-name>
        <url-pattern>/Result</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>controlleur.ControleurHome</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
</web-app>